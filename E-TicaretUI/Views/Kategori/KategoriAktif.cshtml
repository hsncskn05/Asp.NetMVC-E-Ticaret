
@{
    ViewBag.Title = "KategoriAktif";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<E_TicaretEntity.EntityFramework.Kategori>
<br />
<br /><br /><br />
<section class="panel">
    <header class="panel-heading">
        Kategoriler
    </header>
    <br />
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
         

            </div>
            <div class="space15"></div>
            <br />
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Kategori Adi</th>
                        <th>Açıklama</th>
                        <th>Kategori Durum</th>

                        <th>Durum Güncelle</th>
                       

                    </tr>
                </thead>
                <tbody>
                    @foreach (var kategori in Model)
                    {
                        <tr class="">
                            <td>@kategori.Adi</td>
                            <td>@kategori.Aciklama</td>
                            <td>@kategori.Sonlandi</td>

                            <td><a class="edit" href="/Kategori/KategoriAktifGuncelle/@kategori.id"><i class="icon-pencil"></i></a></td>
                            


                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>
</section>



