
@{
    ViewBag.Title = "KategoriAktifGuncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model  E_TicaretEntity.EntityFramework.Kategori
<br /><br /><br /><br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kategori Durum Güncelle
            </header>
            <div class="panel-body">
                <form role="form" class="form-horizontal tasi-form" action="/Kategori/KategoriAktifGuncelle" method="post">
                    <div class="form-group has-success">
                        <label class="col-lg-2 control-label">Kategori Adı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" readonly="readonly" id="f-name" class="form-control" name="Adi" value="@Model.Adi">

                        </div>
                    </div>
                    <div class="form-group has-error">
                        <label class="col-lg-2 control-label">Sonlandi</label>
                        <div class="col-lg-10">
                            @Html.CheckBoxFor(x => x.Sonlandi)

                        </div>
                    </div>
                    <input type="hidden" name="id" value="@Model.id" />


                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Düzenle</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>



