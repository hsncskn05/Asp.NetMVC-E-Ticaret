
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<E_TicaretEntity.EntityFramework.Kategori>
<br />
<br /><br /><br />
<section class="panel">
    <header class="panel-heading">
        Kategoriler
    </header>
    <br />
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Kategori/KategoriEkle" class="btn btn-success">
                        Add New <i class="icon-plus"></i>
                    </a>
                    &nbsp;&nbsp;&nbsp;
                    <a href="/Kategori/KategoriAktif" class="btn btn-danger">
                        Pasif Kategoriler <i class="icon-plus"></i>
                    </a>
                </div>

            </div>
            <div class="space15"></div>
            <br />
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Kategori Adi</th>
                        <th>Açıklama</th>


                        <th>Güncelle</th>
                        <th>Sil</th>
                      
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kategori in Model)
                    {
                        <tr class="">
                            <td>@kategori.Adi</td>
                            <td>@kategori.Aciklama</td>


                            <td><a class="edit" href="/Kategori/KategoriGuncelle/@kategori.id"><i class="icon-pencil"></i></a></td>
                            <td><a class="delete" href="/Kategori/KategoriSil/@kategori.id"><i class="icon-trash"></i></a></td>

                            
                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>
</section>



