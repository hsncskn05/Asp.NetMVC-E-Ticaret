
@{
    ViewBag.Title = "UrunOzellikleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<E_TicaretEntity.EntityFramework.UrunOzellik>

<section class="panel">
    <header class="panel-heading">
        Ürün Özellikleri
    </header>
    <br />
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/UrunOzellik/UrunOzellikEkle" class="btn btn-success">
                        Add New <i class="icon-plus"></i>
                    </a>

                </div>

            </div>
            <div class="space15"></div>
            <br />
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Ürün Adi</th>
                        <th>Özellik Tip Adı</th>
                        <th>Özellik Değer Adı</th>

                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ozellik in Model)
                    {
                        <tr class="">
                            @if (ozellik.Urun != null)
                            {
                                <td>@ozellik.Urun.Adi</td>
                            }

                            @if (ozellik.OzellikTip != null)
                            {
                                <td>@ozellik.OzellikTip.Adi</td>
                            }


                            @if (ozellik.OzellikDeger != null)
                            {
                                <td>@ozellik.OzellikDeger.Adi</td>}


                            <td><a class="edit" href="/UrunOzellik/UrunOzellikGuncelle/@ozellik.Urun.id"><i class="icon-pencil"></i></a></td>
                            <td><a class="delete" href="/UrunOzellik/UrunOzellikSil/@ozellik.Urun.id"><i class="icon-trash"></i></a></td>

                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>
</section>

